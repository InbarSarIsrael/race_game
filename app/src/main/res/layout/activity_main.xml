<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/car_middle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/car_image"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="100dp"
        android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/car_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/car_image"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="50dp"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/car_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/car_image"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="50dp"
        android:visibility="invisible" />
    <!--&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp">

        <!-- Obstacles Row 1 -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_marginStart="30dp"
            android:layout_marginTop="110dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="110dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="110dp"
            android:visibility="invisible" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp">

        <!-- Obstacles Row 2 -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_marginStart="30dp"
            android:layout_marginTop="250dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="250dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="250dp"
            android:visibility="invisible" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp">

        <!-- Obstacles Row 3 -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="380dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="380dp"
            android:visibility="invisible" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp">

        <!-- Obstacles Row 4 -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="510dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="510dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/obstacle12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/obstacle"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="510dp"
            android:visibility="invisible" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Control Buttons -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_BTN_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:icon="@drawable/arrow_left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/pink"
        app:iconTint="#1102BC"
        android:importantForAccessibility="no"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_BTN_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:icon="@drawable/arrow_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/pink"
        app:iconTint="#1102BC"
        android:importantForAccessibility="no"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp">

        <!-- Hearts -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_IMG_heart0"
            android:layout_width="@dimen/heart_dimens"
            android:layout_height="@dimen/heart_dimens"
            app:srcCompat="@drawable/heart" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="@dimen/heart_dimens"
            android:layout_height="@dimen/heart_dimens"
            android:layout_marginHorizontal="3dp"
            app:srcCompat="@drawable/heart" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="@dimen/heart_dimens"
            android:layout_height="@dimen/heart_dimens"
            android:visibility="visible"
            app:srcCompat="@drawable/heart" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>